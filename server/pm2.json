{
	"apps": [{
		"name": "shell.itzoujie.com",
		"script": "./src/index.js",
		"exec_mode": "fork",
		"max_memory_restart": "100M",
		"autorestart": true,
		"node_args": [],
		"args": [],
		"env": {
			"PORT": 7777,
            "NODE_ENV": "production"
